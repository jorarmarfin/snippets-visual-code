			"{!! Form::close() !!}"
		],
		"description": "Formularios con laravelcollective"
	},
	"Text": {
		"prefix": "b:form text",
		"body": [
			"{!! Form::text('${1:nombre}',null,['placeholder'=>'${2:Nombre completo}','size'=>'${3:40}','aria-required'=>'true']) !!}"
		],
		"description": "Campo text de un formulario"
	},
	"TextArea": {
		"prefix": "b:form textarea",
